<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <!--顶部toolbar-->
    <include layout="@layout/common_toolbar_textview" />

    <ListView
        android:id="@+id/lv_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_toolbar"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@color/gray_light"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/lv_first"
        android:background="@color/gray_light" />

    <ListView
        android:id="@+id/lv_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_first"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@color/gray_light"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/lv_second"
        android:background="@color/gray_light" />

    <ListView
        android:id="@+id/lv_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_second"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@color/gray_light"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/lv_third"
        android:background="@color/gray_light" />

    <TextView
        android:id="@+id/btn_editdata_complete"
        android:layout_width="match_parent"
        android:layout_height="36.0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_btn_status"
        android:gravity="center"
        android:text="@string/mine_complete_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>