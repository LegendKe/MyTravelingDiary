<!--顶部toolbar-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ruihai.iconicfontengine.widget.IconicFontTextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24sp"
            android:text="{xk-back}"
            android:textColor="@color/selector_toolbar_btn_text" />

        <TextView
            android:id="@+id/et_search_key"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="搜索用户昵称或者行咖号"
            android:textSize="12sp"
            android:textColor="@color/toolbar_text_color"
            android:background="@drawable/shap_toolbar_edittext_bg"/>

        <!--<com.ruihai.xingka.widget.ClearableEditText-->
            <!--android:imeOptions="actionSearch"-->
            <!--android:inputType="text"-->
            <!--android:id="@+id/et_search_key"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="26dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_marginLeft="25dp"-->
            <!--android:layout_marginRight="25dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="4dp"-->
            <!--android:background="@drawable/shap_toolbar_edittext_bg"-->
            <!--android:drawableRight="@mipmap/ic_action_clear"-->
            <!--android:drawablePadding="12dp"-->
            <!--android:textSize="12sp"/>-->

        <com.ruihai.iconicfontengine.widget.IconicFontTextView
            android:visibility="gone"
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="24sp"
            android:text="{xk-right}"
            android:textColor="@color/selector_toolbar_btn_text" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="#d8d9e2" />

</LinearLayout>
