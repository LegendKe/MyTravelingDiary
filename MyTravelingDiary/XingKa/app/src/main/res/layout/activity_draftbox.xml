<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <!--顶部toolbar-->
    <include layout="@layout/common_toolbar_textview" />

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_refress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@mipmap/icon_empty_view_tip" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:maxEms="15"
            android:maxLines="15"
            android:singleLine="false"
            android:textColor="#a5a5a5"
            android:textSize="@dimen/text_size_xxsmall" />

        <TextView
            android:id="@+id/btn_add_friend"
            android:layout_width="200dp"
            android:layout_height="36.0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btn_status"
            android:gravity="center"
            android:text="快去添加好友"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:gravity="center"
            android:text="点击刷新"
            android:textColor="@color/selector_toolbar_btn_text"
            android:textSize="@dimen/text_size_xxsmall"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
