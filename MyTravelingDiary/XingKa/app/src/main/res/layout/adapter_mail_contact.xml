<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_head_portrait"
        android:layout_width="34.0dp"
        android:layout_height="34.0dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        fresco:placeholderImage="@mipmap/default_avatar"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:backgroundImage="@color/grey"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="5dp"
        fresco:roundingBorderColor="#e8e7ec"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_head_portrait"
            android:text="smdlmslkx"
            android:layout_centerVertical="true"
            android:textColor="#33333d"
            android:textSize="16sp" />



    <TextView
        android:id="@+id/btn_invite"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_rectangular_white_green"
        android:text="邀请"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="12sp" />


</RelativeLayout>