<?xml version="1.0" encoding="utf-8"?><!--顶部toolbar-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:layout_alignParentTop="true"
    android:layout_gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/img_btn1"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:background="@drawable/shape_circle_bg"
        android:visibility="gone">

        <com.ruihai.iconicfontengine.widget.IconicFontTextView
            android:id="@+id/head_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="{xk-back}"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sing_in"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/singin_shape"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.ruihai.iconicfontengine.widget.IconicFontTextView
            android:id="@+id/head_tv_sign_in"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:gravity="center"
            android:text="{xk—sign-in}"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_sing_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="签到"
            android:textColor="@color/orange"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/img_btn2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="9dp"
        android:background="@drawable/shape_circle_bg"
        android:visibility="gone">

        <com.ruihai.iconicfontengine.widget.IconicFontTextView
            android:id="@+id/head_tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="{xk-share}"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>


