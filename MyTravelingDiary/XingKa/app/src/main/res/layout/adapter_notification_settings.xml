<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_set"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:src="@drawable/selector_set_btn" />

        <TextView
            android:id="@+id/tv_set_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_account_security"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/selector_bg_option" />

    </LinearLayout>

    <com.ruihai.xingka.widget.SwitchButton
        android:id="@+id/sb_notify_setting"
        android:layout_width="54dp"
        android:layout_height="28.0dp"
        toggle:onColor="#2ac012"
        toggle:offColor="#e4e4e8"
        toggle:spotColor="#fafafa"
        toggle:offBorderColor="#999999"
        toggle:insetBorderWidth="1.0px"
        android:layout_marginRight="10dp"/>

</LinearLayout>